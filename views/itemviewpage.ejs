                <!-- Product Details -->

                <div class="product_details">
                     <%- include('./partials/flash') %>

                  
                    <div class="container">
                        <div class="row details_row">

                            <!-- Product Image -->
                            <div class="col-lg-6">
                                <div class="details_image">

                                    <div class="details_image_large"><img src="<%=singleproduct.images[0].url%> "
                                            alt="">
                                        <div class="product_extra product_new"><a href="categories.html">New</a></div>
                                    </div>
                                    <div
                                        class="details_image_thumbnails d-flex flex-row align-items-start justify-content-between">
                                        <% for(let image of singleproduct.images) {%>
                                            <% image++ %>
                                                <% if(image.length>1) {%>
                                                    <div class="details_image_thumbnail active"
                                                        data-image="<%=image.url  %> "><img src="<%=image.url  %> "
                                                            alt=""></div>
                                                    <div class="details_image_thumbnail" data-image="<%=image.url  %>">
                                                        <img src="<%=image.url%>" alt=""></div>
                                                    <% } %>
                                                        <% } %>

                                    </div>
                                </div>
                            </div>

                            <!-- Product Content -->
                            <div class="col-lg-6">
                                <%- include('./partials/flash') %>
                                <div class="details_content">
                                    <div class="details_name">
                                        <%=singleproduct.name %>
                                    </div>

                                    <div class="details_price">$<%=singleproduct.price %>
                                    </div>


                                    <div class="details_text">
                                        Description
                                        <p>
                                            <%=singleproduct.description%>
                                        </p>
                                    </div>

                                    <!-- Product Quantity -->
                                    <div class="product_quantity_container">

                                        <form action="/wishlist/<%=singleproduct._id%>" method="post">
                                            <button class="button cart_button" type="submit"> Add/Remove from
                                                Wishlist</button>
                                        </form>
                                    </div>

                                    <!-- Share -->
                                    <div class="details_share">
                                        <span>Contact Owner:</span>
                                        <ul>
                                            <li>Email:Dummy Data </li>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
